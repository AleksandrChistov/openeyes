.home-block
  display flex
  justify-content space-between
  flex-wrap wrap

.photo-wrap
  flex-basis 32%
  height 340px
  border 2px solid #454650
  background-color #454650
  margin-bottom 30px
  position relative

.photo-wrap-lastchild
  flex-grow 1
  margin-left 18px
  height 340px
  border 2px solid #454650
  background-color #454650
  margin-bottom 30px
  position relative

.photo
  width 100%
  height 302px
  object-fit cover

.cart-image
  position absolute
  bottom 4px
  display flex
  justify-content space-between
  align-items center
  width 100%
  height 24px
  object-fit cover
  padding 0 5px
  color #fff

.photo-autor
  object-fit contain
  margin-right 5px
  width 28px

.photo-likes
  object-fit contain
  margin-right 5px
  font-size 28px
  color #ffffff

.photo-likes-active
  object-fit contain
  margin-right 5px
  font-size 28px
  color #ff6347

.cart-image__autor
  display flex
  align-items center
  margin-right 5px

.cart-image__data
  display flex
  align-items center

.date-photo
  margin-right 15px

.name-autor
  text-decoration none
  color #fff
  &:hover
    color #51b5e5

.show-full-foto:hover
  cursor zoom-in

@media (max-width 850px)
  .photo-wrap
    flex-basis 49%
  .photo-wrap-lastchild
    flex-basis 49%
    flex-grow 0
    margin-left 0
    height 340px
    border 2px solid #454650
    background-color #454650
    margin-bottom 30px
    position relative

@media (max-width 550px)
  .photo-wrap, .photo-wrap-lastchild
    flex-basis 100%
  .home-block
    justify-content center