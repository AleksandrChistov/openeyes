.home-block
  display flex
  justify-content flex-start
  flex-wrap wrap

.foto-wrap
  max-width 310px
  height 340px
  border 2px solid #454650
  background-color #454650
  margin-bottom 30px
  position relative
  &:nth-child(3n + 2)
    margin-right 20px
    margin-left 20px

.foto
  width 302px
  height 302px
  object-fit cover

.cart-image
  position absolute
  bottom 4px
  display flex
  justify-content space-between
  align-items center
  width 100%
  height 24px
  object-fit cover
  padding 0 5px
  color #fff

.foto-autor
  object-fit contain
  margin-right 5px
  width 28px

.foto-likes
  object-fit contain
  margin-right 5px
  width 26px

.cart-image__autor
  display flex
  align-items center

.cart-image__data
  display flex
  align-items center

.date-foto
  margin-right 15px

.name-autor
  text-decoration none
  color #fff
  &:hover
    color #51b5e5