.auth-block
  display flex
  justify-content center
  margin-top 20px

.btn-auth
  width 320px
  height 50px
  font-family Verdana, 'san-serif'
  font-size 20px
  font-weight 500
  border-radius 10px
  border 0
  background transparent
  box-shadow 1px 1px 3px 1px #777777
  transition all .5s
  &:hover
    background-color #454650
    box-shadow 1px 1px 1px 1px #777777
    cursor pointer
    color #fff
  &:active, &:focus
    outline none