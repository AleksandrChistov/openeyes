.auth-block
  display flex
  flex-direction column
  align-items center
  margin 0 auto

.btn-auth
  max-width 320px
  height 50px
  font-family Verdana, 'san-serif'
  font-size 20px
  font-weight 500
  border-radius 10px
  padding 0 20px
  border 0
  background transparent
  box-shadow 1px 1px 3px 1px #777777
  transition all .5s
  &:hover
    background-color #454650
    box-shadow 1px 1px 1px 1px #777777
    cursor pointer
    color #fff
  &:active, &:focus
    outline none

.title-auth
  text-align center
  font-size 16px
  color #000000

@media (max-width 350px)
  .btn-auth
    font-size 18px